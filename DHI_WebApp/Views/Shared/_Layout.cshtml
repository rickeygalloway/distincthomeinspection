@{
    ViewBag.SiteName = "Distinct Home Inspection, LLC";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&#038;subset=latin,latin-ext' type='text/css' media='all' />

</head>
<body>



    <div class="dhi_navbar">

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="dhi_top">

                <a href="index"><img src="~/Content/images/logo.png" alt='Distinct Home Inspection Logo' title='Distinct Home Inspection, LLC' /></a>
            </div>
            <div class="container">
                <header id="main-header" data-height-onload="200" data-height-loaded="true" style="top: 0px;">
                    <div class="container clearfix et_menu_container navbar-custom">
                        <div class="navbar-header" style="dashed 1px red">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="navbar-collapse collapse" style="solid 1px green">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("About Us", "About", "Home")</li>
                                <li>@Html.ActionLink("Our Services", "Services", "Home")</li>
                                <li>@Html.ActionLink("Maintenance Tips", "Maintenance", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            </ul>
                        </div>
                    </div> <!-- .container -->
                </header>
            </div>

        </div>
    </div>

    <h1>@ViewBag.SubHeader</h1>

    <p>&nbsp;</p><p>&nbsp;</p>
    @RenderBody()

















    <footer class="contactFooter">
        <div class="row">
            <div class="container body-content">
                <div class="col-md-12">
                    <div class="col-md-6">



                        <div id="contacttrio2" class="col-md-12 et_pb_text et_pb_module et_pb_bg_layout_light et_pb_text_align_left  et_pb_text_8">
                            <h2 style="text-align: left;">CONTACT US</h2>
                            <p style="text-align: left;">Kyle Moseley - <strong>Alabama License # HI-4160</strong></p>
                        </div>

                        <div id="contacttrio" class="col-md-12 et_pb_text et_pb_module et_pb_bg_layout_light et_pb_text_align_left  et_pb_text_9">
                            <div class="col-md-6">
                                <h3 style="text-align: center;">Phone</h3>
                                <p style="text-align: center;"><a href="tel:832-797-5788" target="_blank">832-797-5788</a></p>
                            </div>

                            <div class="col-md-6">
                                <h3 style="text-align: center;">Email</h3>
                                <p style="text-align: center;"><a href="mailto:Sales@firehouseinspections.net" target="_blank">CLICK HERE</a></p>
                            </div>
                        </div>



                    </div>
                    <div class="col-md-6 ">
                            <div class="col-md-2"></div>
                            <div class="col-md-8 flag-background">
                                <p>&nbsp;</p>
                                <h3 style="text-align: center;">First Responders, Active Military,&nbsp;and Veterans:</h3>
                                <p style="text-align: center;">As our thank you for your dedicated service, please call&nbsp;and inquire about your discount on home and other inspection services.<b><br> </b></p>
                                <p>&nbsp;</p>
                                <p>&nbsp;</p>
                            </div>
                            <div class="col-md-2"></div>
                        </div>
                </div>
            </div>
        </div>
    </footer>

    <footer>
        <p>Copyright &copy; @DateTime.Now.Year - <strong>Distinct Home Inspection</strong></p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
