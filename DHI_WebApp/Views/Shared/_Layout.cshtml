@{
    ViewBag.SiteName = "Distinct Home Inspection, LLC";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="google-site-verification" content="0D3eb8x2gRdBL1Tm151EIvgGgHo-12WdsZrvXxqR18I" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="Cache-control" content="public">
    <meta name="description" content="Distinct Home Inspection - Serving Auburn, Opelika, Alexander City, Lake Martin, Sylacauga, and all other areas of Alabama and West Georgia">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | @ViewBag.SiteName</title>
    <link href="/Content/css-hero-animator/assets/lib/animations.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&#038;subset=latin,latin-ext' type='text/css' media='all' />
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Fjalla One'>
</head>
<body>
    <span itemscope itemtype="http://schema.org/LocalBusiness">
        <div class="dhi_navbar">

            <div class="navbar navbar-inverse navbar-fixed-top row">
                <div class="col-md-12 dhi_top_row">

                    <div class="col-md-4 dhi_top top_left">
                        &nbsp;
                    </div>

                    <div class="col-md-4 dhi_top">
                        <a href="/"><img itemprop="image" src="~/Content/images/DHI_logo.PNG" alt='Distinct Home Inspection' title='Distinct Home Inspection, LLC' /></a>
                    </div>

                    <div class="col-md-4 dhi_top top_right">
                        <center>
                            <div class="col-md-12 headerBorder">
                                CONTACT US
                                <div class="col-md-12 headerInside">
                                    <span class="glyphicon glyphicon-phone" style="color:#EA632D"></span> <a href="tel:256-749-5340" target="_blank"><span itemprop="telephone">256-749-5340</span></a><br />
                                    <span class="glyphicon glyphicon-envelope" style="color:#EA632D"></span> <a href="mailto:distincthomeinspectionllc@gmail.com" target="_blank"><span itemprop="email">distincthomeinspectionllc@gmail.com</span></a>
                                </div>
                            </div>
                        </center>
                    </div>

                </div>
                <div class="container">
                    <header data-height-onload="200" data-height-loaded="true" style="top: 0px;">
                        <div class="container clearfix">
                            <div class="navbar-header">
                                <div class="smallLogo">
                                    <a href="/"><img src="~/Content/images/HeaderSmallLogo.jpg" class="smallHeaderLogo" alt="Distinct Home Inspection" /></a>
                                </div>
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">

                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <div class="navbar-collapse collapse">
                                <ul class="nav navbar-nav headerMenu">
                                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                                    <li>@Html.ActionLink("Our Services", "Services", "Home")</li>
                                    <li>@Html.ActionLink("Maintenance Tips", "Maintenance", "Home")</li>
                                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                </ul>
                            </div>
                        </div> <!-- .container -->
                    </header>
                </div>
            </div>
        </div>

        <div class="row subheader">
            <div class="col-md-12">
                <div class="container body-content">
                    <h1>&nbsp;@ViewBag.SubHeader</h1>
                </div>
            </div>
        </div>

        @RenderBody()

        <footer class="contactFooter">
            <div class="row">
                <div class="container body-content">
                    <div class="col-md-12">
                        <div class="col-md-6">

                            <div id="subFooter" class="col-md-12">
                                <h2 style="text-align: left;">CONTACT US</h2>
                                <p style="text-align: left;">Kyle Moseley - <strong itemprop="address" itemscope itemtype="http://schema.org/PostalAddress"><span itemprop="addressRegion">Alabama</span> License # HI-4160</strong></p>
                            </div>

                            <div id="contactduo" class="col-md-12 et_pb_text et_pb_module et_pb_bg_layout_light et_pb_text_align_left  et_pb_text_9">
                                <div class="col-md-6">
                                    <h3 style="text-align: center;">Phone</h3>
                                    <p style="text-align: center;"><a href="tel:256-749-5340" target="_blank">256-749-5340</a></p>
                                </div>

                                <div class="col-md-6">
                                    <h3 style="text-align: center;">Email</h3>
                                    <p style="text-align: center;"><a href="mailto:distincthomeinspectionllc@gmail.com" target="_blank">CLICK HERE</a></p>
                                </div>
                            </div>

                        </div>
                        <div class="col-md-6 ">
                            <div class="col-md-2"></div>
                            <div class="col-md-8 flag-background">
                                <p>&nbsp;</p>
                                <h3 style="text-align: center;">First Responders, Active Military,&nbsp;and Veterans:</h3>
                                <p style="text-align: center;">As our thank you for your dedicated service, please call&nbsp;and inquire about your discount on home and other inspection services.<b><br> </b></p>
                                <p>&nbsp;</p>
                                <p>&nbsp;</p>
                            </div>
                            <div class="col-md-2"></div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

        <footer>
            <p>Copyright &copy; @DateTime.Now.Year - <strong itemprop="name">Distinct Home Inspection</strong></p>
        </footer>
    </span>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="/Content/css-hero-animator/assets/lib/css3-animate-it.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
